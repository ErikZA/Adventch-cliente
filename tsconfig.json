{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "hammerjs"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.spec.ts",
    "src/**/*.e2e.ts",
    "e2e/**/*.e2e-spec.ts"
  ]
}